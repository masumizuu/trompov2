{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx", // ðŸ’¥ This is the key line
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./resources/js/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./resources/js/types"
    ]
  },
  "include": ["resources/js"],
  "exclude": ["node_modules"]
}